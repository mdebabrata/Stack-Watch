#:kivy 1.0

<CheckScreen>:
    Label:
        text: "Tags : "
        pos_hint: {'x':.02,'y':.75}
        size_hint: .2,.2
    TextInput:
        id: tags
        multiline: False
        pos_hint: {'x':.25,'y':.75}
        size_hint: .7,.2
        text: "python"

    Label:
        text: "Delay : "
        pos_hint: {'x':0.02,'y':.5}
        size_hint: .2,.2

    TextInput:
        id: delay
        multiline: False
        pos_hint: {'x':.25,'y':.5}
        size_hint: .7,.2
        text: "3"

    Button:
        text: "Start"
        pos_hint: {'x':.59,'y':0.01}
        size_hint: .4,.2
        on_press: root.initiate()
