#:kivy 1.0

<CheckScreen>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        #background_color: [0.25,0.25,0.25,0]
    Label:
        color: 0,0,0,1
        text: "Tags : "
        pos_hint: {'x':.02,'y':.75}
        size_hint: .2,.2
        font_size: "17sp"
    TextInput:
        id: tags
        focus: True
        multiline: False
        pos_hint: {'x':.25,'y':.75}
        size_hint: .7,.2
        text: "python"
        background_color: [1, 1, 1, .35]
        background_normal: "atlas://data/images/defaulttheme/textinput_active"

    Label:
        color: 0,0,0,1
        text: "Delay : "
        pos_hint: {'x':0.02,'y':.5}
        size_hint: .2,.2
        font_size: "17dp"

    TextInput:
        id: delay
        multiline: False
        pos_hint: {'x':.25,'y':.5}
        size_hint: .7,.2
        text: "1"
        background_color: [1, 1, 1, .35]
        background_normal: "atlas://data/images/defaulttheme/textinput_active"

    StartButton:
        id: start_button
        text: "Start"
        pos_hint: {'x':.585,'y':0.06}
        size_hint: .4,.2
        on_press: root.initiate()
